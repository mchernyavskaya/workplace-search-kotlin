{
  "openapi": "3.0.1",
  "info": {
    "title": "Workplace Search API",
    "version": "v1",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "{schemes}://{host}:{port}",
      "variables": {
        "schemes": {
          "enum": [
            "http",
            "https"
          ],
          "default": "http"
        },
        "host": {
          "default": "localhost",
          "description": "The hostname running the server"
        },
        "port": {
          "default": "3002"
        }
      }
    }
  ],
  "components": {
    "securitySchemes": {
      "bearer_auth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      },
      "basic_auth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "content_source_facet": {
        "type": "object",
        "required": [
          "field",
          "enabled"
        ],
        "properties": {
          "field": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "display_name": {
            "type": "string",
            "nullable": true
          },
          "transform": {
            "type": "string",
            "enum": [
              "capitalize",
              "titleize",
              "mime_type",
              null
            ],
            "nullable": true
          }
        }
      }
    }
  },
  "paths": {
  }
}
